<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewContasItemIconeMundo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icone_mundo"/>

    <TextView
        android:id="@+id/txtViewItemGrupoNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:text="Nome Grupo"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageViewContasItemIconeKey"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icone_key"/>

</LinearLayout>